# PocWhisp Environment Configuration
# Copy this file to .env and customize for your deployment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_PASSWORD=your_secure_database_password_here
DB_HOST=database
DB_PORT=5432
DB_NAME=pocwhisp
DB_USER=pocwhisp

# =============================================================================
# AI SERVICE CONFIGURATION
# =============================================================================

# Whisper Model Selection
# Options: tiny, base, small, medium, large, large-v2, large-v3
# Larger models = better accuracy but more memory/time
WHISPER_MODEL=base

# Llama Model Path (optional)
# Leave empty to use mock responses for testing
LLAMA_MODEL_PATH=

# GPU Configuration
# Fraction of GPU memory to use (0.1 to 1.0)
GPU_MEMORY_FRACTION=0.8

# Audio Processing Limits
# Maximum audio length in seconds (30 minutes = 1800)
MAX_AUDIO_LENGTH=1800

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================

# Logging Level
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# CORS Origins (comma-separated)
CORS_ORIGINS=*

# =============================================================================
# MONITORING CONFIGURATION (Optional)
# =============================================================================

# Grafana Credentials
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_grafana_password_here

# =============================================================================
# SSL CONFIGURATION (Production)
# =============================================================================

# Domain name for SSL certificate
DOMAIN_NAME=your-domain.com

# Email for Let's Encrypt
LETSENCRYPT_EMAIL=your-email@example.com

# =============================================================================
# SCALING CONFIGURATION
# =============================================================================

# Number of API instances (for load balancing)
API_REPLICAS=1

# Number of AI service instances
AI_REPLICAS=1

# =============================================================================
# DEVELOPMENT/TESTING OVERRIDES
# =============================================================================

# Uncomment for development
# WHISPER_MODEL=tiny
# LOG_LEVEL=DEBUG
# GPU_MEMORY_FRACTION=0.5

# Uncomment for CPU-only testing
# COMPOSE_PROFILES=cpu-only
